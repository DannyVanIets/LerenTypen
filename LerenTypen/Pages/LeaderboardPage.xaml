<Page x:Class="LerenTypen.LeaderboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LerenTypen"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1050" Background="White"
      Title="Page5" ShowsNavigationUI="False">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Vertical" Grid.Column="0">
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Label FontSize="20" Margin="46,5,72.8,0" HorizontalAlignment="Center" FontWeight="Bold" HorizontalContentAlignment="Center"  Content="Woorden per minuut" Height="36" Width="406"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Moeilijke Toetsen" FontWeight="Bold" FontSize="15" Margin="10,0,3,0"/>
                    <ComboBox x:Name="Tijdkeuze" Height="28" Width="74" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" Margin="11,0,11.8,0" SelectionChanged="Tijdkeuze_SelectionChanged">
                        <ListBoxItem Content="Weekly"/>
                        <ListBoxItem Content="Monthly"/>
                        <ListBoxItem Content="Yearly"/>
                    </ComboBox>
                </StackPanel>

                <ListView x:Name="MoeilijkeLeaderboard" MaxHeight="160"  Margin="0,5,-0.2,0.6" FontSize="15">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Username" Width="100" DisplayMemberBinding="{Binding WPFName}" />
                            <GridViewColumn Header ="Toetsnaam" Width="307" DisplayMemberBinding="{Binding Testname}" local:GridViewSort.PropertyName="WPFName"/>
                            <GridViewColumn Header="Woorden goed" Width="110" DisplayMemberBinding="{Binding WordsGood}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <Label FontSize="20" Margin="46,5,72.8,0" HorizontalAlignment="Center" FontWeight="Bold" HorizontalContentAlignment="Center"  Content="Typ % goed" Height="36" Width="406"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Moeilijke Toetsen" FontWeight="Bold" FontSize="15" Margin="10,0,3,0"/>
                <ComboBox x:Name="Tijdkeuze2" Height="28" Width="74" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" SelectedIndex="0" Margin="11,0,11.8,0" RenderTransformOrigin="0.503,0.5" SelectionChanged="Tijdkeuze2_SelectionChanged">
                    <ListBoxItem Content="Weekly"/>
                    <ListBoxItem Content="Monthly"/>
                    <ListBoxItem Content="Yearly"/>
                </ComboBox>
            </StackPanel>

            <ListView x:Name="MoeilijkeLeaderboard2" MaxHeight="160"  Margin="0,5,-0.2,0.6" FontSize="15">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Username" Width="120" DisplayMemberBinding="{Binding WPFName}" />
                        <GridViewColumn Header ="Toetsnaam" Width="290" DisplayMemberBinding="{Binding Testname}" local:GridViewSort.PropertyName="WPFName"/>
                        <GridViewColumn Header="% goed" Width="110" DisplayMemberBinding="{Binding PercentageGood}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


