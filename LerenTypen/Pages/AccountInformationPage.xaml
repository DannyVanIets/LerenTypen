<Page x:Class="LerenTypen.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LerenTypen"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1050" Background="White"
      Title="Page1" ShowsNavigationUI="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Label FontSize="36" Margin="20,5,-0.2,0" FontWeight="Bold" Grid.Column="0" Content="Accountoverzicht" Height="62"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Gebruikersnaam :" Margin="0,0,0,0"  Height="47" FontSize="18" Width="200"/>
                <Label Content="//Gebruikersnaam" Margin="0,0,0,0" Height="47" FontSize="18" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Volledige naam :" Margin="0,0,0,0"  Height="47" FontSize="18" Width="200"/>
                <Label Content="//Naam" Margin="0,0,0,0" Height="47" FontSize="18" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Geboortedatum :" Margin="0,0,0,0"  Height="47" FontSize="18" Width="200"/>
                <Label Content="//Datum" Margin="0,0,0,0" Height="47" FontSize="18" Width="200"/>
            </StackPanel>


        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Label FontSize="22" Margin="0,5,0,0" HorizontalAlignment="Center"
               FontWeight="Bold" Grid.Column="0" Content="Laatst Geoefende Toetsen"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Grid Margin="0,10,0,-0.2" Width="526">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBox HorizontalAlignment="Left" Height="138" BorderThickness="0" Margin="29,0,0,0" TextWrapping="Wrap" Text="Gemiddeld aantal goede woorden per minuut." Width="234" FontSize="15"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Label Content="Hier komt de grafiek!" Margin="0,0,-0.2,0" Height="47" FontSize="15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <TextBox HorizontalAlignment="Left" Height="138" BorderThickness="0" Margin="29,0,0,0" TextWrapping="Wrap" Text="Gemiddeld % woorden goed per toets." Width="234" FontSize="15"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                    <TextBox HorizontalAlignment="Left" Margin="0,0,0,89.6" TextWrapping="Wrap" BorderThickness="0" Text="Leaderboardrank :" Width="145" FontSize="15"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
            <Label Content="Label" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>
