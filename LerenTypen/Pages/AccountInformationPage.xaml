<Page x:Class="LerenTypen.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LerenTypen"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1050" Background="White"
      Title="Page1" ShowsNavigationUI="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Label FontSize="36" Margin="20,5,-0.2,0" 
               FontWeight="Bold" Grid.Column="0" Content="Accountoverzicht" Height="62"/>
            <Label Content="Label" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Label FontSize="22" Margin="0,5,0,0" HorizontalAlignment="Center"
               FontWeight="Bold" Grid.Column="0" Content="Laatst Geoefende Toetsen"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <Label Content="1" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Label Content="2" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <Label Content="3" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                    <Label Content="4" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
            <Label Content="Label" Margin="171,0,-0.2,0" Height="47" FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>
